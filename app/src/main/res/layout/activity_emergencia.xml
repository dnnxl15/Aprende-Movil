<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emergencia">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergencia"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="36sp"
        app:fontFamily="sans-serif"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="97dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="141dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="156dp"
        android:layout_height="63dp"
        android:background="#9aff97"
        android:text="Añadir destinatario"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="224dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="163dp"
        android:layout_height="63dp"
        android:background="@color/colorPrimary"
        android:text="Añadir mensaje"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="224dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:background="#b2bda9"
        android:text="Escoger color"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="298dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:background="@android:color/holo_red_light"
        android:text="Realizar denuncia"
        android:textColor="?attr/colorBackgroundFloating"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/button10"
        android:layout_width="160dp"
        android:layout_height="65dp"
        android:background="@android:color/holo_red_light"
        android:text="Solicitar pensión"
        android:textColor="?attr/colorBackgroundFloating"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:background="#65b4ce"
        android:text="Regresar"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="428dp" />

</android.support.constraint.ConstraintLayout>